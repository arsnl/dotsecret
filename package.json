{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=./apps/web",
    "build:cli": "turbo build --filter=./packages/cli",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=./apps/web",
    "dev:cli": "turbo dev --filter=./packages/cli",
    "release": "tsx scripts/release.ts",
    "check": "pnpm format && turbo check",
    "fix": "prettier --write --log-level warn . && turbo fix",
    "format": "prettier --check .",
    "lint": "turbo lint",
    "type": "turbo type"
  },
  "devDependencies": {
    "@actions/exec": "^1.1.1",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@changesets/types": "6.0.0",
    "eslint": "8.57.0",
    "eslint-config-peppy": "3.1.1",
    "prettier": "3.2.5",
    "tsx": "4.7.1",
    "turbo": "1.12.4"
  },
  "engines": {
    "node": ">=16"
  }
}
